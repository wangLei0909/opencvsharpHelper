    </UserControl.Resources>
    <Canvas>
        <TextBlock
            x:Name="label"
            d:Text="1"
            FontSize="40"
            Foreground="Fuchsia"
            Opacity="0.5" />

        <Thumb
            x:Name="thumb_Move"
            Canvas.Left="0"
            Canvas.Top="0"
            Width="200"
            Height="200"
            d:Background="Gray"
            Background="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}, AncestorLevel=1}, Path=Background}"
            DragDelta="Move_DragDelta"
            Opacity="0.9"
            Style="{StaticResource SliderThumbStyle}">
            <Thumb.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="RemoveMe" Header="删除" />
                </ContextMenu>
            </Thumb.ContextMenu>
        </Thumb>
        <Thumb
            x:Name="thumb_Size"
            Canvas.Left="195"
            Canvas.Top="195"
            Width="10"
            Height="10"
            Background="Fuchsia"
            Cursor="SizeNWSE"
            DragDelta="Size_DragDelta"
            Style="{DynamicResource ThumbStyleCircle}" />
    </Canvas>
</UserControl>
