<Window
    x:Class="opencvsharphelper.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    Width="800"
    Height="200"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Icon="YIJIMINI.png"
    WindowStartupLocation="CenterScreen"
    WindowState="Normal"
    WindowStyle="None">
    <Grid>
        <Border Background="#0066CC" />
        <Border Background="Black" Opacity="0.8" />
        <TextBlock
            FontSize="60"
            FontStyle="Oblique"
            Foreground="White"
            Text="OpenCVSharpHelper" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
